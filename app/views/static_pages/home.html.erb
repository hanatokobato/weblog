<% provide :title, t(".home") %>

<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "users/user_info" %>
      </section>
      <section class="stats">
        <%= render "users/stats" %>
      </section>
      <section class="post_form">
        <%= render "posts/new" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".post_feed" %></h3>
      <% if @feed_items.any? %>
        <ol class="posts">
          <%= render @feed_items %>
        </ol>
        <%= paginate @feed_items, theme: "twitter-bootstrap-3" %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>

    <h2><%= t ".intro" %></h2>

    <%= link_to t(".signup"), new_user_registration_path,
      class: "btn btn-lg btn-primary" %>
  </div>
  <% if @posts.any? %>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  <% end %>

  <%= paginate @posts, theme: "twitter-bootstrap-3" %>
<% end %>
