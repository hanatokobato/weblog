<% provide :title, t(".sign_up") %>

<h1><%= t ".sign_up" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for resource, as: resource_name,
      url: registration_path(resource_name) do |f| %>
      <%= devise_error_messages! %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: t(".enter_name"), class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: t(".enter_email"), class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: t(".enter_password"), class: "form-control" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: t(".confirm_password"),
        class: "form-control" %>

      <%= f.submit t(".sign_up"), class: "btn btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
